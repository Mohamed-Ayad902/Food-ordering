<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_2sdp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">


    <ImageView
        android:id="@+id/item_imageView_suggested"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/thrdbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RatingBar
        android:id="@+id/item_suggested_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:clickable="false"
        android:numStars="5"
        android:rating="3.2"
        android:stepSize="0.1"
        app:layout_constraintStart_toEndOf="@id/item_imageView_suggested"
        app:layout_constraintTop_toBottomOf="@id/item_tv_suggested_name"
        />

    <ImageView
        android:id="@+id/item_suggested_iv_shop"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_shop"
        app:layout_constraintStart_toEndOf="@id/item_imageView_suggested"
        app:layout_constraintTop_toBottomOf="@id/item_suggested_ratingBar" />

    <TextView
        android:id="@+id/item_suggested_tv_shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/category_font"
        android:text="toys store"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@id/item_suggested_iv_shop"
        app:layout_constraintStart_toEndOf="@id/item_suggested_iv_shop"
        app:layout_constraintTop_toTopOf="@id/item_suggested_iv_shop" />

    <ImageView
        android:id="@+id/item_iv_itemType_suggested"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:src="@drawable/item_type"
        app:layout_constraintBottom_toBottomOf="@id/item_imageView_suggested"
        app:layout_constraintStart_toEndOf="@id/item_imageView_suggested"
        app:layout_constraintTop_toTopOf="@id/item_imageView_suggested" />

    <TextView
        android:id="@+id/item_tv_suggested_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fontFamily="@font/login_font"
        android:gravity="start"
        android:text="I phone 12"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/item_iv_itemType_suggested"
        app:layout_constraintEnd_toStartOf="@+id/item_iv_itemPrice_suggested"
        app:layout_constraintStart_toEndOf="@id/item_iv_itemType_suggested"
        app:layout_constraintTop_toTopOf="@id/item_iv_itemType_suggested" />

    <ImageView
        android:id="@+id/item_iv_itemPrice_suggested"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:src="@drawable/item_price"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_suggested_price"
        app:layout_constraintEnd_toStartOf="@id/item_tv_suggested_price"
        app:layout_constraintTop_toTopOf="@id/item_tv_suggested_price" />

    <TextView
        android:id="@+id/item_tv_suggested_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/login_font"
        android:text="1999"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_suggested_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_tv_suggested_name" />

    <ImageView
        android:id="@+id/item_suggested_iv_favourite"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/ic_not_favourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>