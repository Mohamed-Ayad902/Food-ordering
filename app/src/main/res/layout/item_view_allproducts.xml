<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginVertical="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_2sdp">




        <ImageView
            android:id="@+id/item_imageView_allProducts"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/thrdbg"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />



    <RatingBar
        android:id="@+id/item_allProducts_ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_70sdp"
        android:clickable="false"
        android:numStars="5"
        app:layout_constraintBottom_toBottomOf="@+id/item_imageView_allProducts"
        app:layout_constraintStart_toEndOf="@id/item_imageView_allProducts"
        app:layout_constraintTop_toTopOf="@+id/item_imageView_allProducts" />

    <ImageView
        android:id="@+id/item_iv_itemType"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:src="@drawable/item_type"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_allProducts_name"
        app:layout_constraintStart_toEndOf="@id/item_imageView_allProducts"
        app:layout_constraintTop_toTopOf="@id/item_tv_allProducts_name" />

    <TextView
        android:id="@+id/item_tv_allProducts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/login_font"
        android:text="I phone 12"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintStart_toEndOf="@id/item_iv_itemType"
        app:layout_constraintTop_toBottomOf="@id/item_allProducts_ratingBar" />

    <ImageView
        android:id="@+id/item_allProducts_iv_shop"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_shop"
        app:layout_constraintStart_toEndOf="@id/item_imageView_allProducts"
        app:layout_constraintTop_toBottomOf="@id/item_iv_itemType" />

    <TextView
        android:id="@+id/item_allProducts_tv_shopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:fontFamily="@font/category_font"
        android:text="Flower store"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintBottom_toBottomOf="@id/item_allProducts_iv_shop"
        app:layout_constraintStart_toEndOf="@id/item_allProducts_iv_shop"
        app:layout_constraintTop_toTopOf="@id/item_allProducts_iv_shop" />

    <ImageView
        android:id="@+id/item_iv_itemPrice"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:src="@drawable/item_price"
        app:layout_constraintBottom_toBottomOf="@id/item_tv_allProducts_price"
        app:layout_constraintEnd_toStartOf="@id/item_tv_allProducts_price"
        app:layout_constraintTop_toTopOf="@id/item_tv_allProducts_price" />

    <TextView
        android:id="@+id/item_tv_allProducts_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/login_font"
        android:text="1999"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_allProducts_ratingBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_allProducts_ratingBar" />


    <ImageView
        android:id="@+id/item_allProducts_iv_Favourite"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/ic_not_favourite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>